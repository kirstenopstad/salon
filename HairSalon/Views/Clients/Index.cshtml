@{
  Layout = "_Layout";
}
<h1>Salon</h1>
<h2>Clients</h2>

@using HairSalon.Models

<!-- List Clients --> 
@if (@Model.Count == 0)
{
  <p>There are no client that have been added to the system yet!</p>
}
<ul>
@foreach (Client client in Model)
{
  <li>
     
    @Html.ActionLink($"{client.FirstName} {client.LastName}", "Details", new { id = client.ClientId })
  </li>
}
</ul>

<!-- Navigation --> 
<p>@Html.ActionLink("Add New Client", "Create")</p>
<p>@Html.ActionLink("Back to Main", "Index", "Home")</p>