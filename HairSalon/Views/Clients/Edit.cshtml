@{
  Layout = "_Layout";
}
<h1>Salon</h1>
<h2>Edit Client Details</h2>

@using HairSalon.Models
@model HairSalon.Models.Client
<!-- Data -->
<!-- Form --> 
<p>NOTE: Clients may not be added without a stylist association. If there are no stylists in drop-down list, add stylist before proceeding.</p>
<p>@Html.ActionLink("Add New Stylist", "Create", "Stylists")</p>


@using (@Html.BeginForm())
{
  <div class="mb-3">
    <!-- First Name -->
    <label for="firstNameInput" class="form-label">
    @Html.LabelFor(model => model.FirstName)
    </label>
    @Html.TextBoxFor(model => model.FirstName, null , new {@class = "form-control", @placeholder="Jane", @id="firstNameInput"})
  </div>
  <div class="mb-3">
    <!-- Last Name --> 
    <label for="lastNameInput" class="form-label">
      @Html.LabelFor(model => model.LastName)
    </label>
    @Html.TextBoxFor(model => model.LastName, null , new {@class = "form-control", @placeholder="Doe", @id="lastNameInput"})
  </div>
  <div class="mb-3">
    <!-- Phone Number --> 
    <label for="phoneInput" class="form-label">
      @Html.LabelFor(model => model.Phone)
    </label>
    @Html.TextBoxFor(model => model.Phone, null , new {@class = "form-control", @placeholder="(###)###-####", @id="phoneInput"})
    </div>
  <div class="mb-3">
    <!-- Email --> 
    <label for="emailInput" class="form-label">
      @Html.LabelFor(model => model.Email)
    </label>
    @Html.TextBoxFor(model => model.Email, null , new {@class = "form-control", @placeholder="Jane@gmail.com", @id="emailInput"})
  </div>
  <div class="mb-3">
  <!-- Stylist --> 
    <label for="stylistInput" class="form-label">
      @Html.LabelFor(model => model.Stylist)
    </label>
    @Html.DropDownList("StylistId", null, new {@class = "form-select"})
  </div>
  @Html.LabelFor(model => model.Stylist)
  <br>
  <!-- Submit -->
  <input type="submit" value="Update Client Details" class="btn btn-outline-dark"/> 
}