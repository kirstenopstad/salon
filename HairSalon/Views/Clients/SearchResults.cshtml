@{
  Layout = "_Layout";
}
<h1>Salon</h1>
<h2>Search Results</h2>

@using HairSalon.Models

<!-- List of Clients -->
@if (@Model.Count == 0)
{
  <p>No Results!</p>
}
<ul>
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{@client.FirstName} {@client.LastName}", "Details", new { id = client.ClientId})</li>
}
</ul>
<!-- Navigation -->
<p>@Html.ActionLink("View Client List", "Index")</p>
<p>@Html.ActionLink("Add New Client", "Create")</p>
<p>@Html.ActionLink("Back to Main", "Index", "Home")</p>