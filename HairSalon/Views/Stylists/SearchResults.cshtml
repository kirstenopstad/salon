@{
  Layout = "_Layout";
}
<h1>Salon</h1>
<h2>Search Results</h2>

@using HairSalon.Models

<!-- List of Stylists -->
@if (@Model.Count == 0)
{
  <p>No Results!</p>
}
<ul>
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{@stylist.Name}", "Details", new { id = stylist.StylistId})</li>
}
</ul>
<!-- Navigation -->
<p>@Html.ActionLink("View Stylist List", "Index")</p>
<p>@Html.ActionLink("Add New Stylist", "Create")</p>
<p>@Html.ActionLink("Back to Main", "Index", "Home")</p>