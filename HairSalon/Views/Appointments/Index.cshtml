@{
  Layout = "_Layout";
}
<h1>Salon</h1>
<h2>Appointments</h2>

@using HairSalon.Models

<!-- List Clients --> 
@if (@Model.Count == 0)
{
  <p>No appointments that have been added to the system yet!</p>
} else {
  <table class="table">
    <thead>
      <th>Time</th>
      <th>Client</th>
      <th>Stylist</th>
    </thead>
    <tbody>
    </tbody>
  @foreach (Appointment appointment in Model)
  {
    <tr>
      <td>@appointment.DateTime</td>
      <td>@appointment.Client.FirstName</td>
      <td>@appointment.Stylist.Name</td>
    </tr>
  }
  </table>
}

